---
interface Props {
  name: string;
  price: string;
  description: string;
  features: string[];
  buttonText: string;
  footerText: string;
}

const { name, price, description, features, buttonText, footerText } = Astro.props;
---

<div class="bg-white shadow-md rounded-xl p-6 max-w-sm text-center border border-gray-100">
  <h2 class="text-xl font-bold text-black">{name}</h2>
  <p class="text-4xl font-semibold text-primary mt-2">{price}</p>
  <p class="text-gray-500 mt-2">{description}</p>
  <ul class="bg-gray-50 rounded-md mt-4 mb-6 p-4 text-sm text-gray-600 space-y-2">
    {features.map((feature) => (
      <li>{feature}</li>
    ))}
  </ul>
  <button class="bg-primary text-white py-2 px-6 rounded-full font-medium hover:bg-primary-dark transition">
    {buttonText}
  </button>
  <p class="text-xs text-gray-400 mt-4">{footerText}</p>
</div>
