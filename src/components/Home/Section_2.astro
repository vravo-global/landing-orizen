---
import FeatureCard from "../FeatureCard.astro"
import image_1 from "../../assets/images/c1.png"
import image_2 from "../../assets/images/c2.png"
import image_3 from "../../assets/images/c3.png"

const feature1 = {
  title: "Monitoreo en Tiempo Real",
  description: "Obtén datos en tiempo real sobre ritmo cardíaco, tensión muscular y calidad del sueño, directamente desde el wearable.",
};

const feature2 = {
  title: "Biofeedback Inteligente",
  description: "Recibe alertas y recomendaciones personalizadas basadas en tus parámetros fisiológicos para prevenir episodios de dolor.",
};

const feature3 = {
  title: "Escalabilidad y Gestión Avanzada",
  description: "Soporta múltiples dispositivos y usuarios con una infraestructura robusta y conectividad segura.",
};

---

<section>
    <div class="p-8 flex flex-col items-center gap-8">
        <div class="px-4 bg-secondary py-2 rounded-full w-96">
            <h1 class="text-4xl font-bold text-center text-white">
                Características
            </h1>
        </div>
    <div class="flex flex-col md:flex-row gap-8">
        <FeatureCard 
            title={feature1.title}
            icon={image_1.src}
            description={feature1.description}
        />
        <FeatureCard 
            title={feature2.title}
            icon={image_2.src}
            description={feature2.description}
        />
        <FeatureCard 
            title={feature3.title}
            icon={image_3.src}
            description={feature3.description}
        />
    </div>
    </div>
</section>